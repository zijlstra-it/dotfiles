[user]
    name = Sander Zijlstra
    email = sander.zijlstra@surfsara.nl

[core]
    excludesfile = ~/.gitignore
    autocrlf = input
    pager = less -FSRX
    editor = vim

[color]
    branch = auto
    diff = auto
    status = auto
    ui = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = green
    changed = yellow
    untracked = red

[alias]
    prune-branches = !git remote prune origin && git branch -vv | grep ': gone]' | awk '{print $1}' | xargs git branch -D
    return-to-master = !git checkout master && git pull && git prune-branches
    return-to-dev = !git checkout dev && git pull && git prune-branches
    lol = log --decorate --oneline --graph
    lo = log --decorate --oneline
    loh = !git lo --decorate --oneline | head -1
